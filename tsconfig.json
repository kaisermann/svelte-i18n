{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "lib": ["es2018", "es2020", "dom", "esnext"],
    "outDir": "dist",
    "types": ["svelte", "jest", "node"]
  }
}
